<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@color/myPrimaryColor"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menuBackButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/action_item_back"
            android:clickable="true"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/titleMenuButton"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:lines="1"
            android:text="@string/app_inventory_menu_stock_summary"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_action_refresh"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="5dip"
            android:gravity="left|center"
            android:orientation="horizontal" >

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_supplier_keterangan" />

                <EditText
                    android:id="@+id/supplier_et_keterangan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dip"
                    android:textColor="@color/black"
                    android:background="@drawable/description_back_shape"
                    android:inputType="text|textNoSuggestions"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="5dip"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_bg"
                    android:padding="3dip" >
                <ImageView
                    android:id="@+id/supplier_foto1"
                    android:contentDescription="@string/app_name"
                    android:layout_width="150dip"
                    android:layout_height="150dip" />
</LinearLayout>
                <Button
                    android:id="@+id/supplier_btn_foto_1"
                    android:layout_marginLeft="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ibbutton_black"
                    android:minHeight="50dp"
                    android:minWidth="200dp"
                    android:text="@string/app_supplier_button_foto_1"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="5dip"
                android:layout_marginBottom="5dip"
                android:gravity="left|center"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_bg"
                    android:padding="3dip" >
                <ImageView
                    android:contentDescription="@string/app_name"
                    android:id="@+id/supplier_foto2"
                    android:layout_width="150dip"
                    android:layout_height="150dip" />
</LinearLayout>
                <Button
                    android:id="@+id/supplier_btn_foto_2"
                    android:layout_marginLeft="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ibbutton_black"
                    android:minHeight="50dp"
                    android:minWidth="200dp"
                    android:text="@string/app_supplier_button_foto_2"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="5dip"
                android:layout_marginBottom="5dip"
                android:gravity="left|center"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_bg"
                    android:padding="3dip" >
                <ImageView
                    android:id="@+id/supplier_foto3"
                    android:layout_width="150dip"
                    android:contentDescription="@string/app_name"
                    android:layout_height="150dip" />
</LinearLayout>
                <Button
                    android:id="@+id/supplier_btn_foto_3"
                    android:layout_marginLeft="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ibbutton_black"
                    android:minHeight="50dp"
                    android:minWidth="200dp"
                    android:text="@string/app_supplier_button_foto_3"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="5dip"
                android:gravity="left|center"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_bg"
                    android:padding="3dip" >
                <ImageView
                    android:id="@+id/supplier_foto4"
                    android:layout_width="150dip"
                    android:contentDescription="@string/app_name"
                    android:layout_height="150dip" />
</LinearLayout>
                <Button
                    android:id="@+id/supplier_btn_foto_4"
                    android:layout_marginLeft="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ibbutton_black"
                    android:minHeight="50dp"
                    android:minWidth="200dp"
                    android:text="@string/app_supplier_button_foto_4"
                    android:textColor="@color/white" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dip"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ibbutton_black"
                        android:minHeight="50dp"
                        android:minWidth="200dp"
                        android:text="@string/app_supplier_btn_upload"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/supplier_btn_upload"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ibbutton_black"
                        android:minHeight="50dp"
                        android:minWidth="200dp"
                        android:text="@string/app_supplier_btn_upload"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>