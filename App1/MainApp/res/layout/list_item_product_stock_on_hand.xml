<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="15dip" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="110dip"
        android:layout_height="90dip"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/sales_order_title_kode_product"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/sales_order_title_nama_product"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/sales_order_title_harga_product"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/sales_order_dialog_btn_add_item"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ibbutton_black"
        android:minHeight="40dp"
        android:minWidth="180dp"
        android:text="@string/app_sales_order_add_item"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>